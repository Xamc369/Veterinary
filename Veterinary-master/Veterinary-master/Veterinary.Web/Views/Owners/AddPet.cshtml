@model Veterinary.Web.Models.PetViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!--el enctype permite cargar la imagen mediante el filepicker-->
        <form asp-action="AddPet" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--el owner id se usa para que no se pida en el formulario se esta enviando
                del get al post-->
            <input type="hidden" asp-for="OwnerId" />

            <partial name="_Pet" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-success">Back to Owner</a>
            </div>
        </form>
    </div>
</div>

